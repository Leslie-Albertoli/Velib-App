<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/adapter_favoris_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.25"
            android:src="@drawable/im_favoris_star_on"
            android:contentDescription="@string/filled_star_image_description" />

        <TextView
            android:id="@+id/adapter_station_name_textview"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.5"/>

        <ImageView
            android:id="@+id/adapter_favoris_delete_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:src="@drawable/im_favoris_delete"
            android:layout_weight="0.25"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>