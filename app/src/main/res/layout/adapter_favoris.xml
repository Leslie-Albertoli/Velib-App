<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/adapter_favoris_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/im_favoris_star_on"></ImageView>

        <TextView
            android:id="@+id/adapter_station_name_textview"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"></TextView>

        <ImageView
            android:id="@+id/adapter_favoris_delete_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/im_favoris_delete"></ImageView>




    </LinearLayout>

</androidx.cardview.widget.CardView>